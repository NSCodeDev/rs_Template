# Django Settings
SECRET_KEY=stage-secret-key-change-this
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,staging.example.com

# Database Configuration
{%- if use_postgres %}
DB_ENGINE=django.db.backends.postgresql
DB_NAME={{ project_slug }}_db_stage
DB_USER=stageuser
DB_PASSWORD=stagepassword
DB_HOST=postgres-stage
DB_PORT=5432
{%- else %}
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
{%- endif %}

# Application
PORT={{ server_port }}
APP_ENV=staging
ENVIRONMENT=staging

{%- if use_redis %}

# Redis Configuration
REDIS_HOST=redis-stage
REDIS_PORT=6379
REDIS_URL=redis://redis-stage:6379/0
{%- endif %}

{%- if use_celery %}

# Celery Configuration
CELERY_BROKER_URL=redis://redis-stage:6379/0
CELERY_RESULT_BACKEND=redis://redis-stage:6379/0
{%- endif %}

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
